<!--exam.wxml-->
<view class="page">
    <view class="time_left">
      <text>{{clock}} {{micro_second}}</text>
    </view>

    <!--试卷大题数据-->
    <view wx:for="{{exam_data}}" wx:key="value" wx:for-item="big_exam" id="{{big_exam.id}}" class="{{big_exam_css[big_exam.id]}}">
      <view class="exam_subtitle">{{big_exam.index}}、{{big_exam.title}}</view>

      <!--题目数据-->
      <view wx:for="{{big_exam.questionList}}" wx:key="value" wx:for-item="small_exam" id="{{small_exam.id}}" class="{{small_exam_css[small_exam.id]}}">
        <view class="weui-cells__title">{{small_exam.title}}</view>
        <view class="weui-cells__title">{{small_exam.content}}</view>

        <!--S-单选题-->
        <view wx:if="{{small_exam.type=='S'}}" class="weui-cells weui-cells_after-title">
          <radio-group class="radio-group" bindchange="changedValue" id="{{small_exam.id}}">
            <label class="weui-cell weui-check__label" wx:key="value" wx:for="{{small_exam.optionList}}">
               <radio value="{{item.id}}" id="{{small_exam.id}}" />{{item.content}}
            </label>
          </radio-group>
        </view>

        <!--M-多选题-->
        <view wx:if="{{small_exam.type=='M'}}" class="weui-cells weui-cells_after-title">
          <checkbox-group bindchange="changedValue" id="{{small_exam.id}}">
            <label class="weui-cell weui-check__label" wx:key="value" wx:for-items="{{small_exam.optionList}}">
            <checkbox value="{{item.id}}" id="{{small_exam.id}}" />{{item.content}}
        </label>
          </checkbox-group>
        </view>

        <!--C-不定项选择题-->
        <view wx:if="{{small_exam.type=='C'}}" class="weui-cells weui-cells_after-title">
          <checkbox-group bindchange="changedValue" id="{{small_exam.id}}">
            <label class="weui-cell weui-check__label" wx:key="value" wx:for-items="{{small_exam.optionList}}">
            <checkbox value="{{item.id}}" id="{{small_exam.id}}" />{{item.content}}
        </label>
          </checkbox-group>
        </view>

        <!--T-判断题-->
        <view wx:if="{{small_exam.type=='T'}}" class="weui-cells weui-cells_after-title">
          <radio-group class="radio-group" bindchange="changedValue" id="{{small_exam.id}}">
            <label class="weui-cell weui-check__label">
            <radio value="true" id="{{small_exam.id}}"/>对
          </label>
            <label class="weui-cell weui-check__label">
            <radio value="false" id="{{small_exam.id}}"/>错
          </label>
          </radio-group>
        </view>

        <!--F-填空题-->
        <view wx:if="{{small_exam.type=='F'}}" class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input" wx:key="value" wx:for-items="{{small_exam.optionList}}">
            <view class="weui-cell__bd" >
              <input class="weui-input" id="F_{{small_exam.id}}_{{item.id}}" placeholder="请填写第{{item.index+1}}空的答案" bindinput="changedValue"/>
            </view>
          </view>
        </view>

        <!--A-问答题-->
        <view wx:if="{{small_exam.type=='A'}}" class="weui-cells weui-cells_after-title">
          <view class="weui-cell">
            <view class="weui-cell__bd">
              <textarea class="weui-textarea" id="{{small_exam.id}}" placeholder="请输入答案" style="height: 3.3em" bindinput="changedValue"/>
            </view>
          </view>
        </view>

      </view>


    </view>

    <view class="page__bd page__bd_spacing">
      <button class="weui-btn {{sumbutton_css}}" type="primary" bindtap="postExam" wx:if="{{ showJJbutton }}">交卷</button>
    </view>

</view>

<view class="fixbuttom">
  <view class="weui-flex">
    <view class="weui-flex__item shang" catchtap="perv_exam">
      上一题
    </view>
    <view class="weui-flex__item">
      {{now_exam}}/{{max_exam}}
    </view>
    <view class="weui-flex__item xia" catchtap="next_exam">
      下一题
    </view>
  </view>

</view>