@import 'style/weui.wxss';

page {
  padding-top: 20px;
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-top: 20px;
  padding-bottom: 20px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.c_green {
  color: #04be02;
}

.c_red {
  color: #ef4f4f;
}

.exam_title{
  color: #000;
  font-weight: bolder;
  font-size: 16px
}

.v_hide{
  display: none;
}

.v_show{
  display: block;
}

.fixbuttom {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: -1px;
  height: 50px;
  z-index: 999;
  border-top: 1rpx solid #e5e5e5;
  overflow: hidden;
}


.fixbuttom view {
  text-align: center;
  padding-top: 8px;
  border-right: 1rpx solid #e5e5e5;
}

.time_left {
  text-align: center;
  color: #999;
  font-size: 13px;
  padding-bottom: 5px;
  overflow: hidden;
  border-bottom: 1rpx solid #e5e5e5;
}

.exam_subtitle {
  text-align: left;
  padding-left: 10px;
  font-size: 14px;
  border-bottom: 1rpx solid #e5e5e5;
  line-height: 50px;
  height: 50px;
}